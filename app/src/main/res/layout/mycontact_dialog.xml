<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#FFFDDD"
    android:padding="20dp">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="#673AB7"
        android:textStyle="bold"
        android:fontFamily="@font/jura"
        android:layout_marginBottom="20sp"/>

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="#B16C07"
        android:fontFamily="@font/sansita"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="#FFFFFF"
        android:padding="10dp"
        android:layout_marginBottom="15dp"
        android:hint="Write here e-mail"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/etPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="#FFFFFF"
        android:padding="10dp"
        android:layout_marginBottom="15dp"
        android:hint="Write here phone's number"
        android:inputType="phone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/bSendSMS"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Send SMS" />

        <Button
            android:id="@+id/bSendEmail"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="Send E-Mail" />
    </LinearLayout>

    <Button
        android:id="@+id/bCall"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Call phone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/bUpdate"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Update contact" />

        <Button
            android:id="@+id/bDelete"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="Delete contact" />

    </LinearLayout>

    <Button
        android:id="@+id/bCancel"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Cancel" />

</LinearLayout>